# Docker environment variables for Phentrieve
# Copy this file to .env.docker and adjust as needed

# Data directories
PHENTRIEVE_HOST_DATA_DIR=./data
PHENTRIEVE_HOST_HF_CACHE_DIR=./data/hf_cache

# Network configuration - for development, this should be npm_default
NPM_SHARED_NETWORK_NAME=npm_default

# API & Frontend configuration
API_PORT_HOST=8001
FRONTEND_PORT_HOST=8080
LOG_LEVEL_API=INFO

# For production deployment
VITE_API_URL_PUBLIC=http://localhost:8001/api/v1
